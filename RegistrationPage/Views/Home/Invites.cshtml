@model IEnumerable<RegistrationPage.Areas.Identity.Data.RegistrationPageUser>

@{
    ViewData["Title"] = "Invites";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model.Count() > 0)
{
    @foreach (var invite in Model)
    {
        <div>
            <h4>User</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    <b>Email</b>
                </dt>
                <dd class="col-sm-10">
                    @invite.Email
                </dd>
                <dt class="col-sm-2">
                    <b>First Name</b>
                </dt>
                <dd class="col-sm-10">
                    @invite.FirstName
                </dd>
                <dt class="col-sm-2">
                    <b>Last Name</b>
                </dt>
                <dd class="col-sm-10">
                    @invite.LastName
                </dd>
                <dt class="col-sm-2">
                    @Html.ActionLink("Accept", "Accept", new { id = invite.Id }) 
                </dt>
                <dd class="col-sm-10">
                    @Html.ActionLink("Deny", "Deny", new { id = invite.Id }) 
                </dd>
            </dl>
        </div>
        <br />
        <hr>
    }
}
else
{
<div class="text-center">
    <h1>No Invites Yet! <br />Go To Find Friends to invite Friends</h1>
</div>
}


