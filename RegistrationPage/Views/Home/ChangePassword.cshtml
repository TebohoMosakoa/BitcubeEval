@model RegistrationPage.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ChangePassword</h1>

<form method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <label asp-for="CurrentPassword" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="CurrentPassword" class="form-control">
            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="NewPassword" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="NewPassword" class="form-control">
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ConfirmPassword" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ConfirmPassword" class="form-control">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="Profile" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>
